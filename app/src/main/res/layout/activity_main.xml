<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/am_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Connect to this Server at"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/am_server_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Server Stopped"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/am_text1"
            app:layout_constraintStart_toStartOf="@+id/am_text1"
            app:layout_constraintTop_toBottomOf="@+id/am_text1" />

        <Button
            android:id="@+id/am_start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Start"
            app:layout_constraintEnd_toEndOf="@+id/am_server_address"
            app:layout_constraintStart_toStartOf="@+id/am_server_address"
            app:layout_constraintTop_toBottomOf="@+id/am_server_address" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
